{
    "name": "demo/workshop-backend",
    "description": "Demo Symfony API for Claude Code Workshop",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "symfony/framework-bundle": "^7.0",
        "symfony/runtime": "^7.0",
        "symfony/yaml": "^7.0",
        "symfony/dotenv": "^7.0",
        "doctrine/orm": "^3.0",
        "doctrine/doctrine-bundle": "^2.11",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "symfony/validator": "^7.0",
        "symfony/serializer": "^7.0",
        "nelmio/cors-bundle": "^2.4",
        "symfony/property-access": "^7.4"
    },
    "require-dev": {
        "symfony/maker-bundle": "^1.52",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        }
    }
}
